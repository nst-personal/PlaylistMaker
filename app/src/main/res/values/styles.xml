<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="MainButtonItem" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/button_title</item>
        <item name="cornerRadius">@dimen/button_icon_radius</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:text">@string/main_screen_search</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_title</item>
        <item name="android:textSize">@dimen/main_button</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="CommonTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="SettingsMenuItem" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_settings_item</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/button_icon_radius</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="CommonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="SettingsSubText" parent="@style/CommonText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="HistorySubText" parent="@style/CommonText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/search_history_text_size</item>
        <item name="android:layout_marginEnd">@dimen/search_history_text_margin</item>
    </style>
    <style name="CommonEditTextContainer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/colorPrimaryContainer</item>
    </style>
    <style name="CommonEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">?attr/titleTextAppearance</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/titleTextAppearance</item>
        <item name="android:textColorHint">?attr/titleTextAppearance</item>
    </style>
    <style name="TrackImage">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginRight">@dimen/icon_margin_right</item>
    </style>
    <style name="TrackDelimiter">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="iconTint">?attr/searchSubTitle</item>
        <item name="android:backgroundTint">?attr/searchSubTitle</item>
    </style>
    <style name="TrackTitle">
        <item name="android:textColor">?attr/searchTitle</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TrackSubTitle">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textColor">?attr/searchSubTitle</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TrackButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="TrackViewContainer">
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="SearchSubDescription">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">?attr/notFoundDescription</item>
        <item name="android:gravity">center</item>
        <item name="android:textFontWeight">@integer/material_motion_duration_medium_2</item>
    </style>

    <style name="RetryButtonItem" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="iconTint">?attr/retryBackgroundColor</item>
        <item name="cornerRadius">@dimen/button_retry_icon_radius</item>
        <item name="android:textColor">?attr/retryTextColor</item>
        <item name="android:text">@string/main_screen_search</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ClearHistoryButtonItem" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">164dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/button_icon_size</item>
        <item name="iconTint">?attr/retryBackgroundColor</item>
        <item name="cornerRadius">@dimen/button_retry_icon_radius</item>
        <item name="android:textColor">?attr/retryTextColor</item>
        <item name="android:text">@string/main_screen_search</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

</resources>
